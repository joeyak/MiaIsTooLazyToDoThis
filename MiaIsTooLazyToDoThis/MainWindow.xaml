<Window x:Class="MiaIsTooLazyToDoThis.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MiaIsTooLazyToDoThis"
        mc:Ignorable="d"
        Title="Mia Is Too Lazy To Do This"
        SizeToContent="WidthAndHeight">
    <Window.Icon>
        <!--blue - michael-->
        <BitmapImage UriSource="images/eggplant.png"/>
    </Window.Icon>
    <Grid x:Name="MainGrid" Background="#0F0F0F">
        <Label Width="300"
               Height="300"
               Foreground="#7945e0"
               FontSize="26"
               FontWeight="Bold"
               VerticalContentAlignment="Center"
               HorizontalContentAlignment="Center"
               Content="Downloading FFmpeg">
            <Label.Background>
                <ImageBrush ImageSource="images/mlg.png"/>
            </Label.Background>
        </Label>
    </Grid>
</Window>
